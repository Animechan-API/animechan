		"url": "https://rocktimsaikia.com"
	},
	"scripts": {
		"migrate:postgress": "dotenv -e .env.development -- npx prisma migrate dev --name postgres-init",
		"build": "del dist && tsup",
		"dev": "npm run build --watch & nodemon dist/server.js",
		"start": "npm run build && node dist/server.js",
		"test": "jest"
	},
	"prisma": {
		"schema": "./src/prisma/schema.prisma",
		"seed": "ts-node ./src/prisma/seed.ts"
	},
	"dependencies": {
		"@koa/cors": "^3.2.0",
		"@prisma/client": "^3.10.0",
		"@types/jest": "^27.4.1",
		"@types/supertest": "^2.0.11",
		"dotenv-cli": "^5.0.0",
		"http-status-codes": "^2.2.0",
		"koa": "^2.13.4",
		"koa-helmet": "^6.1.0",
		"koa-logger": "^3.2.1",
		"koa-router": "^10.1.1",
		"koa2-ratelimit": "^1.1.0",
		"prisma": "^3.10.0"
	},
	"devDependencies": {
		"@faker-js/faker": "^6.0.0-beta.0",
		"@types/koa": "^2.13.4",
		"@types/koa-logger": "^3.1.2",
		"@types/koa-router": "^7.4.4",
		"@types/koa2-ratelimit": "^0.9.2",
		"@types/koa__cors": "^3.1.1",
		"@types/node": "^17.0.21",
		"del-cli": "^4.0.1",
		"dotenv": "^16.0.0",
		"http-graceful-shutdown": "^3.1.7",
		"jest": "^27.5.1",
		"jest-mock-extended": "^2.0.4",
		"nodemon": "^2.0.15",
		"prettier": "^2.6.0",
		"supertest": "^6.2.2",
		"ts-jest": "^27.1.3",
		"ts-node": "^10.7.0",
		"tscpaths": "^0.0.9",
		"tsup": "^5.12.1",
		"typescript": "^4.6.2",
		"xo": "^0.48.0"
	},
	"xo": {
		"rules": {
			"import/no-unassigned-import": "off",
			"import/extensions": "off"
		}
	},
	"tsup": {
		"entry": [
			"src/server.ts"
		],
		"sourcemap": true,
		"clean": true
	},
	"engines": {
		"node": ">=12"
	}
}
