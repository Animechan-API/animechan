{
  "name": "anime-chan-api",
  "version": "2.0.0",
  "main": "index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/RocktimSaikia/anime-chan.git"
  },
  "engines": {
    "node": "14.x",
    "yarn": "1.x"
  },
  "scripts": {
    "dev": "nodemon index.js",
    "start": "cross-env NODE_ENV=production node index.js",
    "test": "jest",
    "pretestcov": "rimraf coverage",
    "testcov": "jest --coverage",
    "test:watch": "jest --watchAll",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "is-ci || husky install",
    "postversion": "git push && git push --tags",
    "commit": "cz"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "http-status-codes": "^2.1.4",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.0.0",
    "koa-logger": "^3.2.1",
    "lodash": "^4.17.21",
    "mongoose": "5.11.15"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.2.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.22.1",
    "husky": "^5.0.9",
    "is-ci": "^3.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
