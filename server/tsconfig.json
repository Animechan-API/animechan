{
	"exclude": ["scripts", "drizzle.config.ts"],
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": false,
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"~/*": ["./*"]
		}
	}
}
